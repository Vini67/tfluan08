<% layout('./layouts/main') -%>

<main class="container my-4 d-flex align-items-center">
  <div class="card-body text-center p-5">
    <h1 class="display-6 fw-semibold mb-2">Olá <%= currentUser.name %></h1>
    <p class="text-secondary mb-4">Você está autenticado. Use o botão abaixo para continuar ou sair da sessão.</p>

    <h2 class="mt-4">Lista de usuários:</h2>
    <ul class="list-group mb-4">
      <% for (const user of users) { %>
        <li class="list-group-item"><%= user.name %> - <%= user.email %></li>
      <% } %>
    </ul>

    <div class="d-flex gap-2 justify-content-center">
      <button class="btn btn-outline-danger px-4" id="btn-sair">Sair</button>
    </div>
  </div>
</main>